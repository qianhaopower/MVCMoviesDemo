<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IRedPill" />
                <binding name="BasicHttpsBinding_IRedPill">
                    <security mode="Transport" />
                </binding>
                <binding name="BasicHttpBinding_IService1" />
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://knockknock.azurewebsites.net/RedPill.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IRedPill"
                contract="Redify.IRedPill" name="BasicHttpBinding_IRedPill" />
            <endpoint address="https://knockknock.readify.net/RedPill.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpsBinding_IRedPill"
                contract="Redify.IRedPill" name="BasicHttpsBinding_IRedPill" />
            <endpoint address="http://haocloud.cloudapp.net/Service1.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IService1"
                contract="Azure.IService1" name="BasicHttpBinding_IService1" />
        </client>
    </system.serviceModel>
</configuration>